extends ../../layouts/auth.pug
include ../../mixins/alert.pug

block main
  +alert-error(5000)

  .container.my-5
    .row.justify-content-center
      .col-8

        .auth-card
          .auth-head
            h1(class="text-center auth-title") Đăng nhập tài khoản
            p(class="text-center auth-desc")
              | Chào mừng bạn quay lại VieLance

          form(
            action=`${prefixAdmin}/auth/login`
            method="POST"
            class="auth-form"
          )
            div(class="form-group")
              label(for="email") Email
              input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                required
              )

            div(class="form-group")
              label(for="password") Mật khẩu
              input(
                type="password"
                class="form-control"
                id="password"
                name="password"
                required
              )

            div(class="form-group")
              button(
                type="submit"
                class="btn btn-primary btn-block"
              ) Đăng nhập
