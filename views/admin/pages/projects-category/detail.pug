extends ../../layouts/default.pug 

include ../../mixins/select-tree.pug

block main 

  if (category.title)
    h1(class="mb-4") #{category.title}

  if (name)
    div(class="mb-4") Danh mục cha: <b>#{name}</b>
  else 
    div(class="mb-4") Danh mục cha: <b>Không có danh mục cha</b>

  if (category.thumbnail)
    div(class="mb-4")
      span Ảnh: 
      img(
        src=category.thumbnail
        style="width: 100px"
      )

  if (category.status)
    div(class="mb-4")
      span Trang thái: 
      if (category.status === "active")
        span(class="badge badge-primary") Hoạt động
      if (category.status === "inactive")
        span(class="badge badge-warning") Dừng hoạt động

  if (category.position)
    div(class="mb-4") Vị trí: <b>#{category.position}</b>

  if (category.description)
    div(class="mb-4") Mô tả: !{category.description}

  a(
    href=`${prefixAdmin}/projects-category/edit/${category.id}`
    class="btn btn-info"
  ) Chỉnh Sửa


  script(src="/admin/js/project.js") 