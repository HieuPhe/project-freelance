header.header
  .container-fluid
    .row.align-items-center 
      .col-3 
        .inner-logo 
          a(href="/admin/dashboard") ADMIN

      .col-9 
        div(class="text-right dropdown")
          button(
            class="btn btn-danger btn-sm dropdown-toggle"
            type="button"
            id="userMenuButton"
            data-toggle="dropdown"
            aria-haspopup="true"
            aria-expanded="false"
          )
            | #{user.fullName}
          div(class="dropdown-menu dropdown-menu-right" aria-labelledby="userMenuButton")
            a(class="dropdown-item" href=`${prefixAdmin}/my-account`) Hồ sơ cá nhân
            div(class="dropdown-divider")
            a(class="dropdown-item text-danger" href=`${prefixAdmin}/auth/logout`) Đăng xuất

          
