header.header
  .container
    .row.align-items-center

      .col-3
        .inner-logo 
          a(href="/")
            img(src=settingGeneral.logo, alt=settingGeneral.websiteName)

      .col-4
        form(
          action="/search" 
          method="GET"
          class="w-100"
        )
          div(class="form-group d-flex mb-0 header-search")
            input(
              type="text" 
              placeholder="Nhập từ khóa..." 
              class="form-control" 
              name="keyword"
              value=keyword
            )
            button(
              type="submit" 
              class="btn btn-primary"
            ) Tìm

      .col-5
        .inner-menu
          ul.mb-0
            li 
              a(href="/") Trang chủ
            li 
              a(href="/projects") Công việc

          ul.nav-right  
            if user

              .li.nav-item.dropdown#notify-wrapper
                a.nav-link.dropdown-toggle(href="javascript:void(0)" data-toggle="dropdown")
                  i.fas.fa-bell
                  span.badge.badge-danger#notify-badge(style="display:none") 0

                .dropdown-menu.dropdown-menu-right#notify-dropdown(style="width:320px")
                  h6.dropdown-header Thông báo
                  .dropdown-divider

                  // ✅ THÊM DUY NHẤT DÒNG NÀY
                  ul.list-unstyled.mb-0#notify-list

                  // ⛔ GIỮ NGUYÊN (JS sẽ ẩn đi khi có thông báo)
                  .notify-empty.text-muted.text-center.py-2 Chưa có thông báo

              li.dropdown
                a(
                  href="javascript:;"
                  class="dropdown-toggle"
                  data-toggle="dropdown"
                  aria-haspopup="true"
                  aria-expanded="false"
                ) 
                  img(src=(user.avatar ? user.avatar : "/client/images/avatar.png"))

                .dropdown-menu.dropdown-menu-right
                  a.dropdown-item(href="/user/info") Hồ sơ cá nhân

                  // FREELANCER
                  if user.roleUser && user.roleUser.toLowerCase() === "freelancer"
                    a.dropdown-item(href="/cart")
                      | Công việc đề xuất (
                      | #{miniCart && miniCart.totalProject ? miniCart.totalProject : 0}
                      | )

                    a.dropdown-item(href="/freelancer/proposals")
                      | Đề xuất của tôi

                    a.dropdown-item(href="/freelancer/jobs")
                      | Công việc đang làm

                    a.dropdown-item(href="/freelancer/jobs/history")
                      | Lịch sử công việc

                  // HIRER
                  if user.roleUser && user.roleUser.toLowerCase() === "hirer"
                    a(
                      class="dropdown-item"
                      href="/hirer/projects"
                    ) Công việc của tôi

                    a(
                      class="dropdown-item"
                      href="/hirer/jobs"
                    ) Công việc đang thực hiện

                    a(
                      class="dropdown-item"
                      href="/hirer/jobs/history"
                    ) Lịch sử công việc

                  .dropdown-divider

                  a.dropdown-item.text-danger(href="/user/logout") Đăng xuất
            else 
              li 
                a(href="/user/login") Đăng nhập
              li 
                a(href="/user/register") Đăng ký


.section.top-strip
  .strip-wrapper
    .strip-center
      span.strip-text Hãy chia sẻ nhu cầu công việc để nhận gợi ý việc làm tốt nhất

    .strip-right
      if user
        if user.roleUser && user.roleUser.toLowerCase() === "freelancer"
          a.strip-btn(href="/user/info") Cập nhật nhu cầu công việc →
        else if user.roleUser && user.roleUser.toLowerCase() === "hirer"
          a.strip-btn(href="/projects/create") Đăng công việc mới ngay →
      else
        a.strip-btn(href="/user/register") Tham gia miễn phí →

