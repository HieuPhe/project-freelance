extends ../../layouts/default.pug

include ../../mixins/box-head.pug
include ../../mixins/project-layout.pug
include ../../mixins/sub-menu.pug

block main
 
  .section.category-bar
    .container
      .row
        .col-3
          nav.category-nav(aria-label="Danh mục việc làm")
            - const pathProject = "/projects";
            +sub-menu-1(layoutProjectCategory, pathProject, 0)
        .col-9

  .section-project-featured.my-5
    .container.my-3
      .row
        .col-12
          +box-head("Công việc nổi bật")

      +project-grid(projectsFeatured)

  .section-project-new.my-5
    .container.my-3
      .row
        .col-12
          +box-head("Công việc mới")

      +project-grid(projectsNew)
