extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-warning(3000)
  +alert-error(3000)

  .container.my-5
    .row.justify-content-center
      .col-8

        .auth-card
          .auth-head
            h1(class="text-center auth-title") Đăng nhập tài khoản
            p(class="text-center auth-desc")
              | Chào mừng bạn quay lại freelancer

          form(
            action="/user/login"
            method="POST"
            class="auth-form"
          )

            .form-group
              label(for="email") Email
              input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                placeholder="Nhập email"
                required
              )

            .form-group
              label(for="password") Mật khẩu
              input(
                type="password"
                class="form-control"
                id="password"
                name="password"
                placeholder="Nhập mật khẩu"
                required
              )

            .form-group.mb-0
              button(
                type="submit"
                class="btn btn-primary btn-block auth-btn"
              ) Đăng nhập

          .auth-foot.text-center.mt-3
            span Bạn chưa có tài khoản?
            a.ml-1(href="/user/register") Đăng ký ngay
