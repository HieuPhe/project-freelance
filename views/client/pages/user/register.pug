extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-warning(3000)
  +alert-error(3000)

  .container.my-5
    .row.justify-content-center
      .col-8

        .auth-card
          .auth-head
            h1(class="text-center auth-title") Đăng ký tài khoản
            p(class="text-center auth-desc")
              | Tham gia freelancer để tìm việc hoặc đăng tuyển nhanh chóng

          form(
            action="/user/register"
            method="POST"
            class="auth-form"
          )

            .form-group
              label(for="fullName") Họ và tên
              input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                placeholder="Nhập họ tên đầy đủ"
                required
              )

            .form-group
              label(for="email") Email
              input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                placeholder="Nhập email"
                required
              )

            .form-group
              label(for="password") Mật khẩu
              input(
                type="password"
                class="form-control"
                id="password"
                name="password"
                placeholder="Tối thiểu 6 ký tự"
                required
              )

            .form-group
              label Vai trò
              select(
                class="form-control"
                name="roleUser"
                required
              ) 
                option(value="freelancer") Freelancer
                option(value="hirer") Hirer

            .form-group.mb-0
              button(
                type="submit"
                class="btn btn-primary btn-block auth-btn"
              ) Đăng ký

          .auth-foot.text-center.mt-3
            span Bạn đã có tài khoản?
            a.ml-1(href="/user/login") Đăng nhập ngay
